<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#030A10"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Χειροκίνητη Σύνδεση"
        android:textColor="#2196F3"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Host (π.χ. 192.168.1.15)"
        android:textColorHint="#66FFFFFF"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/etPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Port"
        android:text="445"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textColorHint="#66FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Username"
            android:textColorHint="#66FFFFFF"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#66FFFFFF"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgProtocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/rbSmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMB"
            android:textColor="@android:color/white"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbSftp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SFTP"
            android:textColor="@android:color/white"
            android:layout_marginStart="20dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Σύνδεση (SMB)"
        android:backgroundTint="#2196F3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Συσκευές στο Δίκτυο"
        android:textColor="#4CAF50"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Αναζήτηση Συσκευών"
        android:backgroundTint="#4CAF50" />

    <ProgressBar
        android:id="@+id/scanProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvScanResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>